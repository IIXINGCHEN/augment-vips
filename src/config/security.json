{
  "version": "1.0.0",
  "name": "augment-vip-security-policy",
  "description": "Enterprise-grade security policy configuration for Augment VIP",
  "created": "2025-01-27T00:00:00.000Z",
  "updated": "2025-01-27T00:00:00.000Z",
  "effective_date": "2025-01-27T00:00:00.000Z",
  
  "security_level": "high",
  "compliance_framework": "enterprise",
  
  "access_control": {
    "authentication": {
      "required": false,
      "methods": [
        "local_user",
        "system_account"
      ],
      "session_timeout_minutes": 60,
      "max_failed_attempts": 3,
      "lockout_duration_minutes": 15
    },
    "authorization": {
      "role_based": false,
      "principle_of_least_privilege": true,
      "require_explicit_permissions": true
    }
  },
  
  "allowed_operations": [
    "database_clean",
    "telemetry_modify",
    "backup_create",
    "backup_restore",
    "path_discovery",
    "dependency_check",
    "validation_check",
    "report_generation",
    "migration_extract",
    "migration_transform",
    "migration_insert",
    "migration_validate",
    "migration_workflow",
    "selective_backup",
    "transaction_management",
    "consistency_check",
    "transformation_rules"
  ],
  
  "restricted_operations": [
    "system_modification",
    "registry_modification",
    "service_modification",
    "network_access",
    "external_communication"
  ],
  
  "restricted_paths": [
    "/etc",
    "/usr",
    "/bin",
    "/sbin",
    "/boot",
    "/sys",
    "/proc",
    "/dev",
    "/root",
    "C:\\Windows",
    "C:\\Program Files",
    "C:\\Program Files (x86)",
    "C:\\System32",
    "C:\\SysWOW64",
    "/System",
    "/Library/System",
    "/usr/bin",
    "/usr/sbin"
  ],
  
  "allowed_file_extensions": [
    "vscdb",
    "json",
    "backup",
    "log",
    "txt",
    "md"
  ],
  
  "blocked_file_extensions": [
    "exe",
    "dll",
    "sys",
    "bat",
    "cmd",
    "ps1",
    "sh",
    "bash",
    "zsh",
    "fish",
    "scr",
    "com",
    "pif",
    "msi",
    "reg"
  ],
  
  "input_validation": {
    "sanitization_level": "strict",
    "max_input_length": 1024,
    "max_path_length": 4096,
    "max_filename_length": 255,
    "allow_unicode": false,
    "allow_special_characters": false,
    "dangerous_patterns": [
      "\\.\\./\\.\\.",
      "\\$\\(",
      "`",
      "\\|\\|",
      "&&",
      ";",
      "\\|",
      ">",
      "<",
      "\\*",
      "\\?",
      "\\[",
      "\\]",
      "\\{",
      "\\}",
      "\\$\\{",
      "\\n",
      "\\r",
      "\\0"
    ]
  },
  
  "file_security": {
    "integrity_verification": true,
    "checksum_algorithm": "sha256",
    "backup_verification": true,
    "max_file_size_mb": 100,
    "scan_for_malware": false,
    "quarantine_suspicious_files": false
  },
  
  "data_protection": {
    "encryption_at_rest": false,
    "encryption_in_transit": false,
    "secure_deletion": true,
    "data_classification": "internal",
    "retention_policy": {
      "logs": "90_days",
      "backups": "30_days",
      "audit_trails": "365_days"
    }
  },
  
  "audit_logging": {
    "enabled": true,
    "level": "detailed",
    "include_user_actions": true,
    "include_system_events": true,
    "include_security_events": true,
    "include_performance_metrics": false,
    "log_file_permissions": "640",
    "log_rotation": true,
    "tamper_protection": true
  },
  
  "monitoring": {
    "real_time_monitoring": true,
    "anomaly_detection": false,
    "intrusion_detection": false,
    "file_integrity_monitoring": true,
    "process_monitoring": true,
    "network_monitoring": false
  },
  
  "incident_response": {
    "automatic_response": false,
    "alert_thresholds": {
      "failed_operations": 5,
      "suspicious_file_access": 3,
      "unauthorized_operations": 1
    },
    "notification_methods": [
      "log_entry",
      "system_event"
    ],
    "escalation_procedures": false
  },
  
  "vulnerability_management": {
    "dependency_scanning": true,
    "version_checking": true,
    "security_updates": "manual",
    "vulnerability_database": "local"
  },
  
  "secure_coding": {
    "input_sanitization": "mandatory",
    "output_encoding": "mandatory",
    "error_handling": "secure",
    "logging_security": "no_sensitive_data",
    "code_review": "required"
  },
  
  "platform_specific": {
    "windows": {
      "execution_policy": "restricted",
      "uac_compliance": true,
      "defender_exclusions": false,
      "registry_protection": true,
      "service_hardening": true
    },
    "linux": {
      "selinux_compliance": true,
      "apparmor_compliance": true,
      "sudo_restrictions": true,
      "file_permissions": "strict",
      "process_isolation": true
    },
    "macos": {
      "sip_compliance": true,
      "gatekeeper_compliance": true,
      "sandbox_compliance": true,
      "keychain_access": false,
      "system_integrity": true
    }
  },
  
  "network_security": {
    "outbound_connections": "blocked",
    "inbound_connections": "blocked",
    "dns_resolution": "system_only",
    "proxy_support": false,
    "ssl_verification": true,
    "certificate_pinning": false
  },
  
  "privacy": {
    "data_minimization": true,
    "purpose_limitation": true,
    "consent_management": false,
    "anonymization": false,
    "pseudonymization": false,
    "right_to_erasure": true
  },
  
  "compliance": {
    "frameworks": [
      "ISO27001",
      "NIST",
      "CIS"
    ],
    "gdpr_compliance": true,
    "hipaa_compliance": false,
    "sox_compliance": false,
    "pci_compliance": false
  },
  
  "risk_assessment": {
    "risk_level": "medium",
    "threat_model": "insider_threat",
    "attack_vectors": [
      "malicious_input",
      "path_traversal",
      "code_injection",
      "privilege_escalation"
    ],
    "mitigation_strategies": [
      "input_validation",
      "path_sanitization",
      "least_privilege",
      "audit_logging"
    ]
  },
  
  "security_controls": {
    "preventive": [
